{
  "name": "atenxion-emr",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "tsc && cd client && npm ci && npm run build",
    "start": "node dist/index.js",
    "dev": "concurrently -k -n API,WEB \"tsx watch src/index.ts\" \"cd client && npm run dev\"",
    "dev:api": "tsx watch src/index.ts",
    "dev:web": "cd client && npm run dev",
    "migrate": "prisma migrate deploy",
    "seed:csv": "tsx scripts/loadCsv.ts",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js --runInBand",
    "lint": "eslint .",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev"
  },
  "devDependencies": {
    "@types/jest": "^29",
    "@types/node": "^20",
    "@types/supertest": "^2",
    "@typescript-eslint/eslint-plugin": "^8.43.0",
    "@typescript-eslint/parser": "^8.43.0",
    "concurrently": "^9",
    "eslint": "^9.35.0",
    "jest": "^29",
    "supertest": "^6",
    "ts-jest": "^29",
    "ts-node-dev": "^2",
    "tsx": "^4.20.5",
    "typescript": "^5"
  },
  "dependencies": {
    "@prisma/client": "^5",
    "bcrypt": "^5",
    "cors": "^2",
    "express": "^4",
    "express-rate-limit": "^7",
    "helmet": "^7",
    "jsonwebtoken": "^9",
    "morgan": "^1",
    "prisma": "^5",
    "zod": "^3"
  }
}
